<div class="modal fade" id="verAviso" tabindex="-1" aria-labelledby="verAviso" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content" style="border: none;">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel">Vista de la tarea</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <form action="/asignarRespuesta" method="POST">
                <div class="modal-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="p-1">
                            <%= nombre %>
                        </h5>
                        <h5 id="modal_idAviso"></h5>
                        <textarea type="text" name="idAviso" id="modal_idAvisoEnviar"></textarea>
                    </div>
                    <div class="row mb-2">
                        <label for="modal_fecha" class="col-sm-3 col-form-label">Fecha: </label>
                        <div class="col-sm-9">
                            <input type="text" readonly class="form-control" id="modal_fecha" value="">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label for="modal_area" class="col-sm-3 col-form-label">Comunicación: </label>
                        <div class="col-sm-9">
                            <input type="text" readonly class="form-control" id="modal_area" value="">
                        </div>
                    </div>
                    <div class="row mb-2">
                        <label for="modal_perfil" class="col-sm-3 col-form-label">Perfil: </label>
                        <div class="col-sm-9">
                            <input type="text" readonly class="form-control" id="modal_perfil" value="<%=perfil %>">
                        </div>
                    </div>
                    <div>
                        <label class="form-label" for="modal_obs">Observaciones: </label>
                        <textarea readonly id="modal_obs" class="form-control" rows="3"></textarea>

                        <label class="form-label" for="modal_res">Comentarios del técnico: </label>
                        <textarea <% if(!tecnico){%> readonly <% } %>  id="modal_res" class="form-control" name="respuesta" rows="3" required></textarea>
                    </div>


                </div>
                <div class="modal-footer">
                    <% if(tecnico){ %>
                        <input type="submit" class="btn btn-success" value="<% if(!entrantes){ %> Añadir Comentario <% }else{ %> Cerrar aviso <% } %>">
                        <% } %>
                </div>
            </form>
        </div>
    </div>
</div>