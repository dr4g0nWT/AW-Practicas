<div class="modal fade" id="modalPerfil" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title" id="exampleModalLabel">Mi Perfil</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">


          <div class="container">
            <div class="row">
              <div class="col-lg-4 col-md-4 col-sm-12">
                  <img height="200em" src="imagen/<%=usuario.email%>" alt="">
              </div>
              <div class="col-lg-8 col-md-8 col-sm-12">
              
                  <h1><%=usuario.nombre%></h1>
                  <p class="mb-0"><strong>Fecha de creación:</strong><%=fecha%></p>
                  <p class="mb-0"><strong>Perfil: </strong><%=usuario.perfil%></p>
                  <p class="mb-0"><strong>Contraseña: </strong>*********************</p>
                  <p class="mb-0"><strong>Nombre para mostrar: </strong> <%=usuario.nombre%></p>  
                
              </div>
            </div>
            <% if (!usuario.tecnico) {%>
            <div class="row mt-3">
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <p class="mb-0">Avisos realizados: <%=categorias[0] + categorias[1] + categorias[2]%></p>
                  <p class="mb-0">Incidencias: <%=categorias[0]%></p>
                  <p class="mb-0">Sugerencias: <%=categorias[1]%></p>
                  <p class="mb-0">Felicitaciones: <%=categorias[2]%></p> 
                </div>
            </div>
            <%}%>
          </div>



        </div>
        <div class="modal-footer">
        
        </div>
      </div>
    </div>
  </div>