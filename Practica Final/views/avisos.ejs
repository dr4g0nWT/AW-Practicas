<!DOCTYPE html>
<html>

<head>
    <title>Pr√°ctica 1</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="css/nuevoAviso.css">
    <%- include("links") %>
    <link rel="stylesheet" href="css/avisos.css">
</head>

<body>

    <nav class="fixed-top">
        <div class="row align-items-center">
            <div class="col-2">
                <img class="logo" src="img/LogoUCM.png" alt="">
            </div>
            <div class="col-10 d-flex flex-row-reverse">
                <button class="p-1 float-right" onclick="window.location.href='/cerrarSesion'">Desconectar</button>
                <img class="userimg" src="imagen/<%=email%>" alt="">
                <button type="button" id="botonPerfil" class="btn" data-bs-toggle="modal" data-bs-target="#modalPerfil">
                    <%=nombre%>
                </button> 
            </div>

        </div>
    </nav>

    <div id="cuerpo">
        <div id="contenedor">
            <div class="d-flex align-items-center barIntermedia">
                <a href="/avisos" class="linkNav">Mis Avisos</a>
                <p>|</p>
                <a href="/historicoAvisos" class="linkNav">Historico de avisos</a>
                <p>|</p>
                <!-- Mostrar dependiendo del rol otras partes de la vista -->
                <div class="p-2 d-flex buscador ms-auto">
                    <input class="form-control mr-sm-2 p-1" type="search" placeholder="Buscar" aria-label="Search">
                    <button class="busqueda p-1" type="submit">Buscar</button>
                </div>

            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Texto</th>
                        <th>Tipo</th>
                        <th>Tecnico</th>
                    </tr>
                </thead>
                <tbody>
                    <% avisos.forEach(function(aviso){%>
                        <tr data-toggle="modal"data-bs-toggle="modal" data-bs-target="#verAviso">
                            <th> <%= aviso.fecha.toLocaleDateString("en-US") %> </th>
                            <th> <%= aviso.texto.substr(0,200) %> </th>
                            <th> <img class="tipoLogo" src="/img/<%= aviso.tipo %>.png" alt=""></th>
                            <th> <%= aviso.idTecnico %> </th>
                        </tr>

                        <%- include("verAviso") %> 

                    <% }) %> 
                </tbody>
            </table>



        </div>
        <div class="d-flex justify-content-end">

            <button class="anadir" data-toggle="modal"data-bs-toggle="modal" data-bs-target="#exampleModal">Nuevo
                aviso</button>
            <%- include("nuevoAviso")%>             
        </div>
    </div>

    

    <%- include("perfil") %>
    <%- include("scripts") %>
</body>



</html>